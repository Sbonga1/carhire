    <h2>Index</h2>



    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Car.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.PickupDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PickupTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReturnTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReturnDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DistCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {

            <div class="modal details-modal" data-doctor-id="@item.BookingId">
                <div class="modal-content">
                    <div class="modal-header-left">
                        <span class="close" id="close">&times;</span>
                        <h2 style="text-align:center">Request Information</h2>
                    </div>

                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <strong>Client Name:</strong>
                            </div>
                            <div class="col-md-6 ">
                                @item.Name
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <strong>Client Surname:</strong>
                            </div>
                            <div class="col-md-6 ">
                                @item.Surname
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <strong>Client Email:</strong>
                            </div>
                            <div class="col-md-6 ">
                                @item.Email
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <strong>Id Number:</strong>
                            </div>
                            <div class="col-md-6 ">
                                @item.IdNumber
                            </div>
                        </div>
                        <div class="row" style="padding-bottom:2%">
                            <div class="col-md-6">
                                <strong>Destination:</strong>
                            </div>
                            <div class="col-md-6 ">
                                @item.Destination
                            </div>
                        </div>

                        @if (item.LicenseFile != null)
                        {
                            <div class="row" style="padding-bottom:1%">
                                <div class="col-md-6">
                                    <p><strong>@item.LicenseFile</strong></p>
                                </div>
                                <div class="col-md-6 text-right">
                                    <a href="@Url.Action("DownloadLicensePdf", "Bookings", new { id = item.BookingId })" class="btn btn-primary"><i class="fa fa-download"></i>Download</a>
                                </div>
                            </div>
                        }

                        @if (item.IdFile != null)
                        {
                            <div class="row" style="padding-bottom:1%">
                                <div class="col-md-6">
                                    <p><strong>@item.IdFile</strong></p>
                                </div>
                                <div class="col-md-6 text-right">
                                    <a href="@Url.Action("DownloadIdPdf", "Bookings", new { id = item.BookingId })" class="btn btn-primary"><i class="fa fa-download"></i>Download</a>
                                </div>
                            </div>
                        }
                        @if (item.BankStatName != null)
                        {
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>@item.BankStatName</strong></p>
                                </div>
                                <div class="col-md-6 text-right">
                                    <a href="@Url.Action("DownloadBankStatementPdf", "Bookings", new { id = item.BookingId })" class="btn btn-primary"><i class="fa fa-download"></i>Download</a>
                                </div>
                            </div>
                        }

                    </div>
                    @if (item.Status == "Awaiting Approval")
                    {
                        <div class="modal-footer">

                            <a onclick="Approve(@item.BookingId)" class="btn btn-primary"><i class="fa fa-check"></i>Approve</a>

                            <a onclick="Decline(@item.BookingId)" class="btn btn-danger"><i class="fa fa-ban"></i>Decline</a>

                        </div>
                    }
                    else if (item.Status == "Payment-Settled")
                    {
                        <a onclick="location.href='@Url.Action(actionName: "Index", controllerName: "Inspectors", routeValues: new { bookId = item.BookingId })'" class="btn btn-primary"><i class="fa fa-check"></i>Assign Inspecor</a>
                    }
                    else if (item.Status == "Inspection-Done")
                    {
                        <a onclick="location.href='@Url.Action(actionName: "Create", controllerName: "Invoices", routeValues: new { bookId = item.BookingId })'" class="btn btn-primary"><i class="fa fa-check"></i>Penalty Invoice</a>
                        <a onclick="Settle(@item.BookingId)" class="btn btn-primary"><i class="fa fa-check"></i>Settle Rental</a>


                    }


                </div>
            </div>






            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Car.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.PickupDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PickupTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReturnTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReturnDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DistCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>


                <td>
                    <a class="btn btn-primary open-reviewModal-btn" data-doctor-id="@item.BookingId"><i class="fa fa-list-alt"></i>Review</a>

                    @Html.ActionLink("Edit", "Edit", new { id = item.BookingId }) |

                    @Html.ActionLink("Delete", "Delete", new { id = item.BookingId })
                </td>
            </tr>
        }

    </table>
</div>
<script>
function Decline(id) {
    var reason = prompt("Please enter the reason for declining:");
    if (reason !== null) {
        // User entered a reason
        alertify.confirm('Car Hire', 'Are you sure you want to decline this request with the reason: ' + reason, function () {
            // Pass the reason as a parameter to the Cancel action in your controller
            window.location.href = '@Url.Action("Decline","Bookings")/' + id + '?reason=' + encodeURIComponent(reason);
        }, null);
    }
    }
    function Approve(id) {

        // User entered a reason
        alertify.confirm('Car Hire', 'Are you sure you want to Approve this request ', function () {
            // Pass the reason as a parameter to the Cancel action in your controller
            window.location.href = '@Url.Action("Approve","Bookings")/' + id;
        }, null);
    }
    function Settle(id) {

        // User entered a reason
        alertify.confirm('Car Hire', 'Are you sure you want to Settle this request ', function () {
            // Pass the reason as a parameter to the Cancel action in your controller
            window.location.href = '@Url.Action("Settle","Bookings")/' + id;
        }, null);
    }



</script>


<script>
    // Get all the buttons with the class "open-modal-btn"
    var buttons = document.querySelectorAll(".open-detailsModal-btn");

    // Attach click event listeners to each button
    buttons.forEach(function (button) {
        button.addEventListener("click", function () {
            var doctorId = button.getAttribute("data-doctor-id");
            var modal = document.querySelector(".details-modal[data-doctor-id='" + doctorId + "']");
            modal.style.display = "block";
        });
    });

    // Get all the close buttons with the class "close"
    var closeButtons = document.querySelectorAll(".close");

    // Attach click event listeners to each close button
    closeButtons.forEach(function (closeButton) {
        closeButton.addEventListener("click", function () {
            var modal = closeButton.closest(".modal");
            modal.style.display = "none";
        });
    });

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
        if (event.target.classList.contains("modal")) {
            event.target.style.display = "none";
        }
    };

</script>

