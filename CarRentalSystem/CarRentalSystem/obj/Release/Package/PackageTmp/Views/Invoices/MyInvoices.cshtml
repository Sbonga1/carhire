@model IEnumerable<CarRentalSystem.Models.Invoice>

@{
    ViewBag.Title = "MyInvoices";
}


<div style="padding:5%;padding-top:2%">


    <h2>@ViewBag.Title</h2>


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Booking.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Penalty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LatePaymentFee)
            </th>
            
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Booking.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DueDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Penalty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LatePaymentFee)
                </td>
                
                <td>
                    @if (item.Status == "Awaiting Payment")
                    {
                        <a onclick="location.href='@Url.Action(actionName: "CreatePayment", controllerName: "PayPal", routeValues: new { Payment = "No", cost=item.Penalty })'" class="btn btn-primary"><i class="fa fa-paypal"></i>Pay</a>

                    }
                </td>
            </tr>
        }

    </table>
    </div>