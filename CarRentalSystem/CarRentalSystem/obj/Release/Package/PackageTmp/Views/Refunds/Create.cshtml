@model CarRentalSystem.Models.Refund

@{
    ViewBag.Title = "Create";
}
<div style="padding:5%;padding-top:2%">


    <h2>Create</h2>
    <div style="padding-left:6%">
        <h4>Refund</h4>
    </div>
    <hr />
    <div style="padding-left:14%">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="form-group">
                    @Html.LabelFor(model => model.RefundDate, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.RefundDate, new { htmlAttributes = new { @class = "form-control", @style = "width:35%", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.RefundDate, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.InitialAmt, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.InitialAmt, new { htmlAttributes = new { @class = "form-control", @style = "width:35%", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.InitialAmt, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.RefundFee, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.RefundFee, new { htmlAttributes = new { @class = "form-control", @style = "width:35%", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.RefundFee, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.tobePaid, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.tobePaid, new { htmlAttributes = new { @class = "form-control", @style = "width:35%", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.tobePaid, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-primary" style="width:35%" />
                    </div>
                </div>
            </div>
        }
    </div> 
</div>
