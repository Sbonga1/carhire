@model IEnumerable<CarRentalSystem.Models.RentalHandover>

@{
    ViewBag.Title = "Index";
}
<div style="padding:5%;padding-top:2%">

    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Booking.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inspector.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HandoverDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HandoverTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Signature)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Booking.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Inspector.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HandoverDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HandoverTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Signature)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.HandoverID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.HandoverID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.HandoverID })
                </td>
            </tr>
        }

    </table>
</div>